<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Crawl.Views.ItemDeletePage"
            Title="{Binding Title}">



    <ScrollView>
      <StackLayout
          x:Name="DetailsRoot"
          Orientation="Vertical"
          Spacing="10"
          Padding="10"
          BackgroundColor="Transparent">

        <!-- Items delete page title-->
        <Label Text="Items Delete Page" FontSize="Large" 
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               BackgroundColor="Transparent"/>

        <Image Source="{Binding Data.ImageURI}"
            WidthRequest="150"
            HeightRequest="150"
            HorizontalOptions="Center"
            VerticalOptions="Center"/>
        <!-- Item delete page attributes-->
        <StackLayout
            Orientation="Horizontal"
            HorizontalOptions="FillAndExpand"
            BackgroundColor="#6FA5F0">
          <Label Text="Name : "
             FontSize="Medium"
             HorizontalOptions="Start"/>
          <Label Text="{Binding Data.Name}"
              FontSize="Medium"
              HorizontalOptions="Start"/>
        </StackLayout>
        <StackLayout
            Orientation="Horizontal"
            HorizontalOptions="FillAndExpand"
            BackgroundColor="#6FA5F0">
          <Label Text="Attribute : "
             FontSize="Medium"
             HorizontalOptions="Start"/>
          <Label Text="{Binding Data.Attribute}"
             FontSize="Medium"
             HorizontalOptions="FillAndExpand"/>
        </StackLayout>
        <StackLayout
            Orientation="Horizontal"
            HorizontalOptions="FillAndExpand"
            BackgroundColor="#6FA5F0">
          <Label Text="Value : "
             FontSize="Medium"
             HorizontalOptions="Start"/>
          <Label Text="{Binding Data.Value}"
              FontSize="Medium"
              HorizontalOptions="FillAndExpand"/>
        </StackLayout>

        <StackLayout
            Orientation="Horizontal"
            HorizontalOptions="FillAndExpand"
            BackgroundColor="#6FA5F0">
          <Label Text="Range : "
             FontSize="Medium"
             HorizontalOptions="Start"/>
          <Label Text="{Binding Data.Range}"
              FontSize="Medium"
              HorizontalOptions="FillAndExpand"/>
        </StackLayout>

        <StackLayout
            Orientation="Horizontal"
            HorizontalOptions="FillAndExpand"
            BackgroundColor="#6FA5F0">
          <Label Text="Location : "
             FontSize="Medium"
             HorizontalOptions="Start"/>
          <Label Text="{Binding Data.Location}"
              FontSize="Medium"
              HorizontalOptions="Center"/>
        </StackLayout>

        <StackLayout
            Orientation="Horizontal"
            HorizontalOptions="FillAndExpand"
            BackgroundColor="#6FA5F0">
          <Label Text="Description : "
             FontSize="Medium"
             HorizontalOptions="Start"/>
          <Label Text="{Binding Data.Description}"
              FontSize="Medium"
              HorizontalOptions="FillAndExpand"/>
        </StackLayout>

        <!-- Buttons for confirmation of deletion or cancel the delete-->
        <StackLayout Orientation="Horizontal">
          <Button Text="Confirm Delete"
          VerticalOptions="CenterAndExpand"
          HorizontalOptions="CenterAndExpand"
          BackgroundColor="LightGray"
              Clicked="Delete_Clicked"/>

          <Button Text="Cancel"
          VerticalOptions="CenterAndExpand"
          HorizontalOptions="CenterAndExpand"
          BackgroundColor="LightGray"
              Clicked="Cancel_Clicked"/>
        </StackLayout>
      </StackLayout>
    </ScrollView>
</ContentPage>