<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.Views.MellowFoxGame"
             xmlns:vm="clr-namespace:App2.ViewModels"
             Title="{Binding Title}">



    <StackLayout>
        <Label Text="MellowFoxGame"
               FontSize="40"
               FontAttributes="Bold"
               HorizontalOptions="Center"/>
               
        <Image Source="mellowfoxgamelogo.PNG"
               WidthRequest="300"
               HeightRequest="300"
               HorizontalOptions="Center" />
        
        <!--
        <Label Text="Button"
               FontSize="40"
