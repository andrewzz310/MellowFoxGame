        <Button Text="Score Page"
                Font="Larger"
                HorizontalOptions="Center"
                Clicked="ButtonScore"/>
        
        <Button Text="Character Page"
                Font="Larger"
                HorizontalOptions="Center"
                Clicked="ButtonCharacter"/>


    </StackLayout>

    
    
